CREATE DATABSE JOBS;

USE JOBS;

CREATE TABLE USUARIO (
    ID_USUARIO INT  PRIMARY KEY AUTO_INCREMENT,
    NOME VARCHAR(100) NOT NULL,
    CPF VARCHAR(15) NOT NULL,
    GENERO VARCHAR(30),
    NASCIMENTO  INT(10) NOT NULL,
    ESTADO_CIVIL VARCHAR(20)
);

CREATE TABLE CONTATO (
    ID_CONTATO INT PRIMARY KEY AUTO_INCREMENT,
    FONE VARCHAR(15),
    MOBILE VARCHAR(15),
    EMAIL VARCHAR(100),
    FOREIGN KEY(ID_USUARIO) REFERENCES USUARIO (ID_USUARIO) 
);

CREATE TABLE ENDERECO (
    ID_ENDERECO INT PRIMARY KEY AUTO_INCREMENT,
    CEP VARCHAR(9),
    LOGRADOURO(100),
    NUMERO VARCHAR(6),
    COMPLEMENTO VARCHAR(10),
    BAIRRO VARCHAR(20),
    CIDADE VARCHAR(50),
    ESTADO CHAR(2),
    FOREIGN KEY(ID_USUARIO) REFERENCES USUARIO (ID_USUARIO)
);

CREATE TABLE XP (
    ID_XP INT PRIMARY KEY AUTO_INCREMENT,
    NOME_EMPRESA VARCHAR(100),
    CARGO VARCHAR(30),
    SALARIO VARCHAR(15),
    DESCRICAO VARCHAR(200),
    RESUMO VARCHAR(200),
    FOREIGN KEY(ID_USUARIO) REFERENCES USUARIO (ID_USUARIO)
);

CREATE TABLE FORMACAO (
    ID_FORMACAO INT PRIMARY KEY AUTO_INCREMENT,
    INSTITUICAO VARCHAR(100),
    FORMACAO  VARCHAR(50),
    CURSO VARCHAR(50),
    INFORMACOES VARCHAR(200),
    FOREIGN KEY(ID_USUARIO) REFERENCES USUARIO (ID_USUARIO)
);

CREATE TABLE PERIODO_XP (
    ID_PERIODO_XP INT PRIMARY KEY AUTO_INCREMENT,
    INICIO DATE,
    FIM DATE,
    FOREIGN KEY(ID_XP) REFERENCES XP (ID_XP) 

);

CREATE TABLE PERIODO_FORMACAO (
    ID_PERIODO_FORMACAO INT PRIMARY KEY AUTO_INCREMENT,
    INICIO DATE,
    FIM DATE,
    FOREIGN KEY(ID_FORMACAO) REFERENCES FORMACAO (ID_FORMACAO) 

);